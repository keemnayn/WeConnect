<mapper namespace="com.arezip.weconnect.mapper.FreeBoardMapper">
	<insert id="insertFreeBoard"
		parameterType="com.arezip.weconnect.model.vo.FreeBoardVO">
		insert into
		free_board(free_board_id,free_board_title,free_board_content,member_id)
		values(free_board_seq.nextval,#{title},#{content},#{memberId})
	</insert>
